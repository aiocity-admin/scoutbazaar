<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- window action -->
    <!--
            The following tag is an action definition for a "window action",
            that is an action opening a view or a set of views
        -->

    <data>  
        <!--TREE VIEW-->
        <record model="ir.ui.view" id="view_tree_shipping_methods">
            <field name="name">gb.shipping_methods.tree</field>
            <field name="model">gb.shipping_methods</field>
            <field name="arch" type="xml">
                <tree>
                  <field name="name"/>
                  <field name="shipping_code"/>
                </tree>
            </field>
        </record>

        <!-- FORM VIEW -->
        <record  model="ir.ui.view" id="view_tree_shipping_methods">
            <field name="name">gb.shipping_methods.tree.form</field>
            <field name="model">gb.shipping_methods</field>
            <field name="arch" type="xml">

                <form string="Add shipping methods">
                    <group string="Data">
                        <field name="name"/>
                        <field name="shipping_code"/>
                    </group>
                </form>

            </field>
        </record>
    </data>
    
    <menuitem id="shipping_methods_main_menu" name="Shipping methods" sequence="3"/>

    <menuitem id="shipping_methods_sec_menu" name="shipping_methods 2" parent="shipping_methods_main_menu"/>

    <menuitem id="shipping_methods_menu" name="shipping_methods 3" parent="shipping_methods_sec_menu" action="action_shipping_methods"/>

    <!-- ACTION -->
    <record model="ir.actions.act_window" id="action_shipping_methods">
        <field name="name">View shipping_methods</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">gb.shipping_methods</field>
        <field name="view_type">form</field>
        <field name="view_mode">form,tree</field>
    </record>
</odoo>
