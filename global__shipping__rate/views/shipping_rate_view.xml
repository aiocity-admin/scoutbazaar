<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- window action -->
    <!--
            The following tag is an action definition for a "window action",
            that is an action opening a view or a set of views
        -->

    <data>  
        <!--TREE VIEW-->
        <record model="ir.ui.view" id="view_tree_currency">
            <field name="name">gb.currency.tree</field>
            <field name="model">gb.currency</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="currency_code"/>
                </tree>
            </field>
        </record>

        <!-- FORM VIEW -->
        <record  model="ir.ui.view" id="view_tree_currency">
            <field name="name">gb.currency.tree.form</field>
            <field name="model">gb.currency</field>
            <field name="arch" type="xml">

                <form string="Add Currency">
                    <group string="Data">
                        <field name="name"/>
                        <field name="currency_code"/>
                    </group>
                </form>

            </field>
        </record>
    </data>
    
    <menuitem id="currency_main_menu" name="Currency" sequence="3"/>

    <menuitem id="currency_sec_menu" name="currency 2" parent="currency_main_menu"/>

    <menuitem id="currency_menu" name="currency 3" parent="currency_sec_menu" action="action_currency"/>

    <!-- ACTION -->
    <record model="ir.actions.act_window" id="action_currency">
        <field name="name">View Currency</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">gb.currency</field>
        <field name="view_type">form</field>
        <field name="view_mode">form,tree</field>
    </record>
</odoo>
