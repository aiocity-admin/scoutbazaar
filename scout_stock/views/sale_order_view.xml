            <template id="cart_summary" name="Scout" inherit_id="website_sale.cart_summary">
                <xpath expr="//thead/tr" position="inside">
                    <th class="border-top-0 td-terms" id="term_conditions">Terms &amp; Conditions</th>
                </xpath>
        
                <xpath expr="//tbody//td[@class='text-center td-price']" position="after">
                            <td>
                                <span class="text-primary" t-att-data-id="line.location_id.id" style="cursor: pointer;" id="location_terms_conditions" t-esc="line.location_id.name"/>
                            </td>
                </xpath>
            </template>
        
  </data>
</odoo>