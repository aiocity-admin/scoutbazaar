<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_order_shipping_address_add_button" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_shipping_id']" position="after">
                    <button name="button_culate_nso_lines_order" string="Calculate" type="object" class="btn-primary"/>
                </xpath>
                <xpath expr="//field[@name='order_line']//field[@name='delivery_method']" position="after">
                	<field name="shipping_charge"/>
                	<field name="extra_charge_product"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree//field[@name='delivery_method']" position="after">
                	<field name="shipping_charge"/>
                	<field name="extra_charge_product"/>
                </xpath>
                <xpath expr="//form/sheet/group/group/field[@name='payment_term_id']" position="after">
		            <field name="is_settled"/>
        		</xpath>
            </field>
        </record>
  </data>
</odoo>
