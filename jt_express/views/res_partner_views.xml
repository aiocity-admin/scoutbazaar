<?xml version="1.0" encoding='utf-8'?>

<odoo>
	<record id="res_partner_form_view_inhert_jt_servicable_area" model="ir.ui.view">
	        <field name="name">res.partner.form.jt.servicable.area</field>
	        <field name="model">res.partner</field>
	        <field name="inherit_id" ref="base.view_partner_form"/>
	        <field name="arch" type="xml">
                <xpath expr="//field[@name='country_id']" position="replace">
                </xpath>
                <xpath expr="//field[@name='street']" position="after">
                    <field name="country_code" invisible="1"/>
                    <field placeholder="Barangay" options='{"no_open": True}' name="town_id" class="o_address_zip" attrs="{'invisible': [('country_code','!=','PH')] , 'required':[('country_code','=','PH')]}"/><br/>
                    <field placeholder="City / Municipality" options='{"no_open": True}' name="district_id" class="o_address_zip" attrs="{'invisible': [('country_code','!=','PH')] , 'required':[('country_code','=','PH')]}"/><br/>
                    <field placeholder="Province" name="city_id" options='{"no_open": True}' class="o_address_city" attrs="{'invisible': [('country_code','!=','PH')] , 'required':[('country_code','=','PH')]}"/>
                </xpath>
                <xpath expr="//field[@name='zip']" position="after">
                    <field name="country_id" attrs="{'required':['|',('customer','=',True),('supplier','=',True)]}" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                </xpath>
                
	            <xpath expr="//field[@name='child_ids']/form/sheet/group/group//field[@name='state_id']" position="replace">
	     			<field name="state_id" attrs="{'invisible':[('country_code','=','PH')],'required':['|',('customer','=',True),('supplier','=',True)]}" class="o_address_state" placeholder="State" options='{"no_open": True}' context="{'country_id': country_id, 'zip': zip}"/>
	            </xpath>
	            <xpath expr="//field[@name='child_ids']/form/sheet/group/group//field[@name='country_id']" position="replace">
	            </xpath>
	            <xpath expr="//field[@name='child_ids']/form/sheet/group/group//field[@name='zip']" position="after" string="Country">
	            	<field name="country_id"  attrs="{'required':['|',('customer','=',True),('supplier','=',True)]}" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
	            </xpath>
	            <xpath expr="//field[@name='child_ids']/form/sheet/group/group//field[@name='street']" position="after">
	            	<field name="country_code" invisible="1"/>
	            	<field placeholder="Barangay" name="town_id" class="o_address_zip" attrs="{'invisible':[('country_code','!=','PH')], 'required':[('country_code','=','PH')]}"/>
                    <field placeholder="City / Municipality" class="o_address_zip" name="district_id" attrs="{'invisible':[('country_code','!=','PH')], 'required':[('country_code','=','PH')]}"/>
                    <field placeholder="Province" class="o_address_city" name="city_id" attrs="{'invisible':[('country_code','!=','PH')], 'required':[('country_code','=','PH')]}"/>
	            </xpath>
                <xpath expr="//field[@name='child_ids']/form/sheet/group/group//field[@name='city']" position="replace">
                    <field name="country_code" invisible="1"/>
                    <field name="city" placeholder="City" class="o_address_city" attrs="{'invisible':[('country_code','=','PH')], 'required':[('country_code','!=','PH'),'|',('customer','=',True),('supplier','=',True)]}"/>
                </xpath>
                <xpath expr="//field[@name='child_ids']/form/sheet/group/group//field[@name='street2']" position="replace">
                    <field name="country_code" invisible="1"/>
                    <field name="street2" placeholder="Street 2..." class="o_address_street" attrs="{'invisible':[('country_code','=','PH')]}"/>
                </xpath>
                
                <xpath expr="//field[@name='zip']" position="replace">
                    <field name="zip" placeholder="ZIP" class="o_address_zip" attrs="{'required':['|',('customer','=',True),('supplier','=',True)]}"/>
                </xpath>
                <xpath expr="//field[@name='street']" position="replace">
                    <field name="street" placeholder="Street..." class="o_address_street"/>
                </xpath>
                <xpath expr="//field[@name='street2']" position="replace">
                    <field name="country_code" invisible="1"/>
                    <field name="street2" placeholder="Street 2..." class="o_address_street" attrs="{'invisible':[('country_code','=','PH')]}"/>
                </xpath>
                <xpath expr="//field[@name='city']" position="replace">
                    <field name="country_code" invisible="1"/>
                    <field name="city" placeholder="City" class="o_address_city" attrs="{'invisible':[('country_code','=','PH')], 'required':[('country_code','!=','PH'),'|',('customer','=',True),('supplier','=',True)]}"/>
                </xpath>
                <xpath expr="//field[@name='state_id']" position="replace">
                    <field name="state_id"  attrs="{'required':['|',('customer','=',True),('supplier','=',True)]}" class="o_address_state" placeholder="State" options='{"no_open": True}' context="{'country_id': country_id, 'zip': zip}"/>
                </xpath>
                
                <xpath expr="//field[@name='phone']" position="replace">
                    <field name="phone" widget="phone" attrs="{'required':['|',('customer','=',True),('supplier','=',True)]}"/>
                </xpath>
                
                <xpath expr="//field[@name='email']" position="replace">
                    <field name="email" widget="email" context="{'gravatar_image': True}" required="1"/>
                </xpath>
	        </field>	
	</record>
</odoo>
